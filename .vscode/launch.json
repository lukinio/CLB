    "version": "0.2.0",
    "configurations": [
        {
            "name": "IntervalNet (split MNIST, inc. domain)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "intervalBatchLearn.py",
            "args": [
                "--gpuid",
                "0",
                "--repeat",
                "10",
                "--incremental_class",
                "--optimizer",
                "Adam",
                "--force_out_dim",
                "10",
                "--no_class_remap",
                "--first_split_size",
                "2",
                "--other_split_size",
                "2",
                "--model_name",
                "interval_mlp400",
                "--agent_type",
                "interval",
                "--agent_name",
                "IntervalNet",
                "--batch_size",
                "100",
                "--lr",
                "0.001",
                "--clipping",
                "--eps_per_model",
                "--eps_val",
                "7",
                "7",
                "2",
                "2",
                "1",
                "--eps_epoch",
                "12",
                "--eps_max",
                "0",
                "--kappa_epoch",
                "1",
                "--schedule",
                "12"
            ],
            "env": {
                // "CUDA_VISIBLE_DEVICES": "0",
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "120",
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Baseline (inc. domain)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "iBatchLearn.py",
            "args": [
                "--gpuid",
                "0",
                "--repeat",
                "10",
                "--optimizer",
                "Adam",
                "--force_out_dim",
                "2",
                "--first_split_size",
                "2",
                "--other_split_size",
                "2",
                "--schedule",
                "4",
                "--batch_size",
                "128",
                "--model_name",
                "MLP400",
                "--lr",
                "0.001"
            ],
            "env": {
                // "CUDA_VISIBLE_DEVICES": "0",
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "120",
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}